root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

[*.{js,css,less,cfg,ini,json,yml,html}]
indent_style = space
indent_size = 2

[*.{diff,md}]
trim_trailing_whitespace = false

[*.hbs]
indent_style = space
indent_size = 2
insert_final_newline = false
